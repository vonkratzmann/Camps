<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

    <TextView
        android:id="@+id/comment_date"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-2dp"
        android:maxLines="1"
        tools:text="01/01/1001" />

    <TextView
        android:id="@+id/site_item_street_divider"
        style="@style/AppTheme.TextDivider"
        android:layout_alignTop="@+id/comment_date"
        android:layout_toEndOf="@+id/comment_date"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/comment_author"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/site_item_street_divider"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-2dp"
        tools:text="Vonnie" />

    <TextView
        android:id="@+id/comment_text"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_date"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-2dp"
        tools:text="Comment text" />

</RelativeLayout>
